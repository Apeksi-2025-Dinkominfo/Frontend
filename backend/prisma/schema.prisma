generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model News{
  id Int @id @default(autoincrement())
  tittle String
  location String
  date DateTime 
  body String @db.Text
  images String
}

model User {
  id       String  @id @default(uuid())
  name     String
  password String
  role     Role    @default(user)
}

enum Role {
  user
  admin
}


